<ui:UiWindow
    x:Class="Transliterator.Views.TableViewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Transliterator.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:Transliterator.ViewModels"
    Title="Table View Window"
    Width="450"
    Height="800"
    d:DataContext="{d:DesignInstance Type=viewmodels:TableViewModel}"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    ExtendsContentIntoTitleBar="True"
    MouseDown="Window_MouseDown"
    Template="{StaticResource baseWindow}"
    WindowBackdropType="Mica"
    mc:Ignorable="d">
    <Grid Margin="40,5,40,15" ScrollViewer.CanContentScroll="True">

        <Grid.ColumnDefinitions>
            <ColumnDefinition ScrollViewer.CanContentScroll="True" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!--  TODO: Add spacing  -->
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Choose table to view:" />
            <ComboBox
                Width="120"
                HorizontalAlignment="Center"
                DisplayMemberPath="Name"
                ItemsSource="{Binding TransliterationTables}"
                SelectedItem="{Binding SelectedTransliterationTable}" />
        </StackPanel>
        <ui:DataGrid
            Grid.Row="1"
            Padding="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="24"
            HeadersVisibility="None"
            ItemsSource="{Binding SelectedTransliterationTable}" />
    </Grid>
</ui:UiWindow>