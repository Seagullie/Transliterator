<Page
    x:Class="Transliterator.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Transliterator.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Transliterator.Helpers"
    xmlns:local="clr-namespace:Transliterator.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DesignHeight="1015"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:InvertBoolConverter x:Key="InvertBoolConverter" />
        <helpers:ThemeEnumToBooleanConverter x:Key="ThemeEnumToBooleanConverter" />
    </Page.Resources>

    <!--  TODO: Replace Labels with TextBoxes  -->

    <ui:DynamicScrollViewer
        Margin="0,0,0,0"
        Padding="20"
        IsTabStop="False">
        <StackPanel>

            <StackPanel Margin="0,0,0,20">
                <Label
                    Margin="0,0,0,10"
                    Content="App theme"
                    FontSize="18" />
                <RadioButton
                    Margin="0,12,0,0"
                    Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
                    CommandParameter="theme_light"
                    Content="Light"
                    GroupName="themeSelect"
                    IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource ThemeEnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}" />
                <RadioButton
                    Margin="0,8,0,0"
                    Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
                    CommandParameter="theme_dark"
                    Content="Dark"
                    GroupName="themeSelect"
                    IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource ThemeEnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}" />
                <RadioButton Content="Use system settings" IsEnabled="False" />
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <Label
                    Margin="0,0,0,10"
                    Content="General"
                    FontSize="18" />
                <CheckBox
                    HorizontalAlignment="Left"
                    Content="Start minimized"
                    IsChecked="{Binding ViewModel.IsMinimizedStartEnabled}"
                    ToolTip="Start in minimized state. Goes well with `Turn on translit at startup` and `Run at system startup` checked." />
                <CheckBox
                    HorizontalAlignment="Left"
                    Content="Turn on translit at startup"
                    IsChecked="{Binding ViewModel.IsTranslitEnabledAtStartup}" />
                <CheckBox
                    Content="Enable State Overlay"
                    IsChecked="{Binding ViewModel.IsStateOverlayEnabled}"
                    IsEnabled="False"
                    ToolTip="State Overlay is a little green/red circle indicating whether the app is toggled on or off." />
                <CheckBox
                    HorizontalAlignment="Left"
                    Content="Run at system startup"
                    IsChecked="{Binding ViewModel.IsAutoStartEnabled}"
                    ToolTipService.ShowOnDisabled="True" />
                <CheckBox
                    HorizontalAlignment="Left"
                    Content="Disable Alt + Shift Global Shortcut"
                    IsChecked="{Binding ViewModel.IsAltShiftGlobalShortcutEnabled, Converter={StaticResource InvertBoolConverter}}"
                    IsEnabled="False"
                    ToolTip="This setting stops working once the program is closed."
                    ToolTipService.ShowOnDisabled="True" />
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <Label
                    Margin="0,0,0,10"
                    Content="Buffer characters while typing"
                    FontSize="18" />
                <DockPanel>
                    <StackPanel HorizontalAlignment="Left">
                        <RadioButton
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            AutomationProperties.AutomationId="displayRadioBtn"
                            Content="Display"
                            IsChecked="{Binding ViewModel.IsBufferInputEnabled, Converter={StaticResource InvertBoolConverter}}" />

                        <RadioButton
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            AutomationProperties.AutomationId="waitForComboRadioBtn"
                            Content="Buffer"
                            IsChecked="{Binding ViewModel.IsBufferInputEnabled}"
                            ToolTip="Select this mode if you experience buggy or incorrect transliteration." />
                    </StackPanel>
                    <ui:TextBox
                        MinWidth="120"
                        MaxWidth="120"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        BorderThickness="1"
                        IsReadOnly="True"
                        PlaceholderText="Demo Text Area"
                        Text="{Binding ViewModel.ShowcaseText}" />
                </DockPanel>
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <Label
                    Margin="0,0,0,10"
                    Content="Sound"
                    FontSize="18" />
                <CheckBox
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Play sound on toggle"
                    IsChecked="{Binding ViewModel.IsToggleSoundOn}" />

                <StackPanel Margin="0,15,0,0">
                    <Label
                        HorizontalAlignment="Left"
                        Content="Sound on toggle on:"
                        FontSize="14" />

                    <StackPanel
                        Height="Auto"
                        VerticalAlignment="Center"
                        helpers:MarginSetter.Margin="0, 5, 0, 5">

                        <TextBlock>
                            <ui:SymbolIcon FontSize="20" Symbol="Folder20" />

                            <Label
                                d:Content="path/to/custom/sound"
                                Content="{Binding ViewModel.ToggleOnSoundFileName, Mode=OneWay}"
                                ToolTip="{Binding ViewModel.ToggleOnSoundFilePath}"
                                ToolTipService.ShowOnDisabled="true" />
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <ui:Button
                                Margin="0,0,5,0"
                                Command="{Binding ViewModel.ChangeToggleOnSoundCommand}"
                                Icon="Folder20"
                                ToolTip="Set custom sound" />
                            <ui:Button
                                Command="{Binding ViewModel.DeleteToggleOnSoundCommand}"
                                Icon="Delete20"
                                ToolTip="Clear custom sound" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Margin="0,15,0,0">
                    <Label
                        HorizontalAlignment="Left"
                        Content="Sound on toggle off:"
                        FontSize="14" />

                    <StackPanel
                        Height="Auto"
                        VerticalAlignment="Center"
                        helpers:MarginSetter.Margin="0, 5, 0, 5">

                        <TextBlock>
                            <ui:SymbolIcon FontSize="20" Symbol="Folder20" />

                            <Label
                                d:Content="path/to/custom/sound"
                                Content="{Binding ViewModel.ToggleOffSoundFileName, Mode=OneWay}"
                                ToolTip="{Binding ViewModel.ToggleOffSoundFilePath}"
                                ToolTipService.ShowOnDisabled="true" />
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <ui:Button
                                Margin="0,0,5,0"
                                Command="{Binding ViewModel.ChangeToggleOffSoundCommand}"
                                Icon="Folder20"
                                ToolTip="Set custom sound" />
                            <ui:Button
                                Command="{Binding ViewModel.DeleteToggleOffSoundCommand}"
                                Icon="Delete20"
                                ToolTip="Clear custom sound" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <Label
                    Margin="0,0,0,10"
                    Content="Shortcuts"
                    FontSize="18" />
                <DockPanel>
                    <Label VerticalAlignment="Center" Content="Toggle Transliterator:" />
                    <controls:HotKeyTextBox
                        Grid.Column="1"
                        MinWidth="120"
                        MaxWidth="120"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        HotKey="{Binding ViewModel.ToggleHotKey}"
                        Style="{DynamicResource DefaultTextBoxStyle}"
                        TextAlignment="Center" />
                </DockPanel>
            </StackPanel>

            <Label
                Margin="0,0,0,10"
                Content="Other"
                FontSize="18" />
            <StackPanel
                Margin="0,0,0,20"
                helpers:MarginSetter.Margin="15"
                Orientation="Horizontal">

                <Button Command="{Binding ViewModel.OpenTranslitTablesWindowCommand}" Content="Edit Tables" />
                <Button Command="{Binding ViewModel.OpenDebugWindowCommand}" Content="To Debug Panel" />
            </StackPanel>
        </StackPanel>
    </ui:DynamicScrollViewer>
</Page>